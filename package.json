{
	"name": "safe-bigint",
	"version": "1.1.0",
	"description": "Safely create a BigInt from a numerical string, even one larger than MAX_SAFE_INTEGER.",
	"main": "index.js",
	"browser": "modern.js",
	"exports": {
		".": "./modern.js",
		"./is-safe": "./is-safe.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"prepack": "npmignore --auto --commentLines=autogenerated",
		"prepublish": "not-in-publish || npm run prepublishOnly",
		"prepublishOnly": "safe-publish-latest",
		"pretest": "npm run lint",
		"test": "npm run tests-only",
		"posttest": "npx npm@'>= 10.2' audit --production",
		"tests-only": "nyc tape 'test/**/*.js'",
		"disabled-prelint": "evalmd README.md",
		"lint": "eslint --ext=js,mjs .",
		"postlint": "tsc -p . && attw -P",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/safe-bigint.git"
	},
	"keywords": [
		"bigint",
		"safe",
		"MAX_SAFE_INTEGER"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ljharb/safe-bigint/issues"
	},
	"homepage": "https://github.com/ljharb/safe-bigint#readme",
	"dependencies": {
		"call-bind": "^1.0.8",
		"get-intrinsic": "^1.2.6"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.15.4",
		"@ljharb/eslint-config": "^21.1.1",
		"@ljharb/tsconfig": "^0.2.2",
		"@types/call-bind": "^1.0.5",
		"@types/for-each": "^0.3.3",
		"@types/get-intrinsic": "^1.2.3",
		"@types/object-inspect": "^1.13.0",
		"@types/tape": "^5.6.5",
		"auto-changelog": "^2.5.0",
		"encoding": "^0.1.13",
		"eslint": "=8.8.0",
		"evalmd": "^0.0.19",
		"for-each": "^0.3.3",
		"npmignore": "^0.3.1",
		"nyc": "^10.3.2",
		"object-inspect": "^1.13.3",
		"safe-publish-latest": "^2.0.0",
		"tape": "^5.9.0",
		"typescript": "next"
	},
	"testling": {
		"files": "test/index.js"
	},
	"engines": {
		"node": ">= 0.4"
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": false,
		"commitLimit": false,
		"backfillLimit": false,
		"hideCredit": true
	},
	"publishConfig": {
		"ignore": [
			".github/workflows"
		]
	}
}
